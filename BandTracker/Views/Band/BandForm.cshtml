<!DOCTYPE html>
<html>
  <head>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link rel="stylesheet" type="text/css" href="~/css/styles.css" />
    <meta charset="utf-8">
    <title>Band Tracker</title>
  </head>
  <body>
    <div class="container">
      <h1>Band Tracker</h1>
      <nav>
       <a href="/home">Home Page</a> |
       <a href="/bands/list">All Bands</a> |
       <a href="/venues/list">All Venues</a> |
       <a href="/new/venue">Add Venue</a>
     </nav>
      <h2>Add Band</h2>
      <form action="/new/band" method="post">
        <div class="form-group">
          <label for="name">Name</label>
          <input name="name" class='form-control width' type='text'>
        </div>
        <div class="form-group">
          <label for="genre">Genre</label>
          <select name="genre">
            <option value="avant-garde">avant-garde</option>
            <option value="blues">blues</option>
            <option value="country">country</option>
            <option value="disco">disco/electronic</option>
            <option value="folk">folk</option>
            <option value="hip hop">hip hop</option>
            <option value="jazz">jazz</option>
            <option value="latin">latin</option>
            <option value="pop">pop</option>
            <option value="R&B">R&B</option>
            <option value="rock">rock</option>
          </select>
        </div>
        <div class="form-group">
          <label for="leader">Leader</label>
          <input name="leader" class='form-control width' type='text'>
        </div>
        <div class="form-group">
          <label for="members">Members</label>
          <input name="members" class='form-control width' type='text'>
        </div>
        <div class="form-group">
          <label for="originPlace">Origin Place</label>
          <input name="originPlace" class='form-control width' type='text'>
        </div>
        <div class="form-group">
          <label for="originYear">Origin Year</label>
          <input name="originYear" class='form-control width' type='text'>
        </div>
        <div class="form-group">
          <label for="agent">Agent Name</label>
          <input name="agent" class='form-control width' type='text'>
        </div>
        <div class="form-group">
          <label for="agentContact">Agent Contacts</label>
          <input name="agentContact" class='form-control width' type='text'>
        </div>
        <button type='submit' class='btn btn-primary'>Add Band</button>
      </form>
    </div>
  </body>
</html>

<!DOCTYPE html>
<html>
  <head>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link rel="stylesheet" type="text/css" href="~/css/styles.css" />
    <meta charset="utf-8">
    <title>Band Tracker</title>
  </head>
  <body>
      <div class="container">
       <h1>Band Tracker</h1>
       <nav>
        <a href="/bands/list">All Bands</a> |
        <a href="/new/band">Add Band</a> |
        <a href="/venues/list">All Venues</a> |
        <a href="/new/venue">Add Venue</a>
      </nav>
       <h3></h3>
        <div class="row">
          <div class="col-md-6">
            <form class="userForm" action="/search/bands/name" method="post">
              <div class="wrapper">
                <h2 class="form-signin-heading">Find Band by name</h2>
                <input type="text" class="form-control inputBox" name="name" placeholder="BandName"/>
                <br>
                <button class="btn btn-primary" type="submit">Search</button>
              </form>
              @if (@Model != null)
              {
                 <ul>
                  @foreach (var band in @Model["searchedBandsByName"])
                  {
                      <li><a href="/band/@band.GetId()/details">@band.GetName()</a></li>
                  }
                 </ul>
              }
              <form class="form-signin" action="/search/bands/genre" method="post">
                <h2 class="form-signin-heading">Find Band by genre</h2>
                <select name="genre">
                  <option value="avant-garde">avant-garde</option>
                  <option value="blues">blues</option>
                  <option value="country">country</option>
                  <option value="disco">disco/electronic</option>
                  <option value="folk">folk</option>
                  <option value="hip hop">hip hop</option>
                  <option value="jazz">jazz</option>
                  <option value="latin">latin</option>
                  <option value="pop">pop</option>
                  <option value="R&B">R&B</option>
                  <option value="rock">rock</option>
                </select>
                <br>
                <br>
                <button class="btn btn-primary" type="submit">Search</button>
              </form>
              @if (@Model != null)
              {
                 <ul>
                  @foreach (var band in @Model["searchedBandsByGenre"])
                  {
                      <li><a href="/band/@band.GetId()/details">@band.GetName()</a></li>
                  }
                 </ul>
              }
            </div>
          </div>
          <div class="col-md-6">
            <form class="userForm" action="/search/venues/date" method="post">
              <div class="wrapper">
                <h2 class="form-signin-heading">Find Venue by Date</h2>
                <input type="date" class="form-control inputBox" name="date"/>
                <br>
                <button  class="btn btn-primary" type="submit">Search</button>
              </form>
              @if (@Model != null)
              {
                 <ul>
                  @foreach (var venue in @Model["searchedVenuesByDate"])
                  {
                      <li><a href="/venue/@venue.GetId()/details">@venue.GetName()</a></li>
                  }
                 </ul>
              }
            </div>
          </div>
        </div>
      </div>
  </body>
</html>
